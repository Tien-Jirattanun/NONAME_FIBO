<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro">

    <xacro:include filename="inertia_macros.xacro" />

    <!-- COLOR -->

    <material name="white">
        <color rgba="1 1 1 1" />
    </material>

    <material name="orange">
        <color rgba="1 0.3 0.1 1" />
    </material>

    <material name="blue">
        <color rgba="0.2 0.2 1 1" />
    </material>

    <material name="black">
        <color rgba="0 0 0 1" />
    </material>

    <material name="red">
        <color rgba="1.0 0.0 0.0 1" />
    </material>

    <!-- Base Link -->

    <link name="base_link"></link>

    <!-- Chassis Link -->

    <joint name="chassis_joint" type="fixed">
        <parent link="base_link" />
        <child link="chassis_link" />
        <origin xyz="0.0 0.0 0.063" />
    </joint>

    <link name="chassis_link">

        <visual>
            <geometry>
                <box size="0.55 0.55 0.02" />
            </geometry>
            <material name="red" />
        </visual>

        <collision>
            <geometry>
                <box size="0.55 0.55 0.02" />
            </geometry>
        </collision>

        <xacro:inertial_box mass="0.5" x="0.55" y="0.55" z="0.02">
            <origin xyz="0.0 0.0 0.0" />
        </xacro:inertial_box>

    </link>

    <gazebo reference="chassis_link">
        <material>Gazebo/Red</material>
    </gazebo>

    <!-- Wheel flont left link -->

    <joint name="swerve_fl_joint" type="revolute">
        <origin xyz="-0.212 0.212 0.063" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="swerve_fl_link" />
        <axis xyz="0.0 0.0 1.0" />
        <limit lower="${-pi}" upper="${pi}" effort="100.0" velocity="50.0" />
    </joint>

    <link name="swerve_fl_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

    </link>

    <gazebo reference="swerve_fl_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="wheel_fl_joint" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${-pi/2} 0.0" />
        <parent link="swerve_fl_link" />
        <child link="wheel_fl_link" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="wheel_fl_link">

        <visual>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.063">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="wheel_fl_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Wheel front right link -->

    <joint name="swerve_fr_joint" type="revolute">
        <origin xyz="0.212 0.212 0.063" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="swerve_fr_link" />
        <axis xyz="0.0 0.0 1.0" />
        <limit lower="${-pi}" upper="${pi}" effort="100.0" velocity="50.0" />
    </joint>

    <link name="swerve_fr_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

    </link>

    <gazebo reference="swerve_fr_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="wheel_fr_joint" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${-pi/2} 0.0" />
        <parent link="swerve_fr_link" />
        <child link="wheel_fr_link" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="wheel_fr_link">

        <visual>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.063">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="wheel_fl_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Wheel rear left link -->

    <joint name="swerve_rl_joint" type="revolute">
        <origin xyz="-0.212 -0.212 0.063" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="swerve_rl_link" />
        <axis xyz="0.0 0.0 1.0" />
        <limit lower="${-pi}" upper="${pi}" effort="100.0" velocity="50.0" />
    </joint>

    <link name="swerve_rl_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

    </link>

    <gazebo reference="swerve_rl_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="wheel_rl_joint" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${-pi/2} 0.0" />
        <parent link="swerve_rl_link" />
        <child link="wheel_rl_link" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="wheel_rl_link">

        <visual>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.063">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="wheel_rl_link">
        <material>Gazebo/Black</material>
    </gazebo>

    <!-- Wheel rear right link -->

    <joint name="swerve_rr_joint" type="revolute">
        <origin xyz="0.212 -0.212 0.063" rpy="0.0 0.0 0.0" />
        <parent link="base_link" />
        <child link="swerve_rr_link" />
        <axis xyz="0.0 0.0 1.0" />
        <limit lower="${-pi}" upper="${pi}" effort="100.0" velocity="50.0" />
    </joint>

    <link name="swerve_rr_link">

        <visual>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="blue" />
        </visual>

        <collision>
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 ${pi/2}" />
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

    </link>

    <gazebo reference="swerve_rr_link">
        <material>Gazebo/Blue</material>
    </gazebo>

    <joint name="wheel_rr_joint" type="continuous">
        <origin xyz="0.0 0.0 0.0" rpy="0.0 ${-pi/2} 0.0" />
        <parent link="swerve_rr_link" />
        <child link="wheel_rr_link" />
        <axis xyz="0.0 0.0 1.0" />
    </joint>

    <link name="wheel_rr_link">

        <visual>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
            <material name="black" />
        </visual>

        <collision>
            <geometry>
                <cylinder radius="0.063" length="0.05" />
            </geometry>
        </collision>

        <xacro:inertial_cylinder mass="0.1" length="0.05" radius="0.063">
            <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0" />
        </xacro:inertial_cylinder>

    </link>

    <gazebo reference="wheel_rr_link">
        <material>Gazebo/Black</material>
    </gazebo>

</robot>